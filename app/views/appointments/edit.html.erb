<h1>Edit a Gym Appointment at Globo Gym</h1>

<%= form_for @appointment  do |f| %>
  <%= f.label :user_name %>
  <%= f.text_field :user_name %>
  <br />
  <br />
  <%= f.collection_select :equipment_id, Equipment.all, :id, :name %>
  <br />
  <br />
  <%= f.label :date %>
  <%= f.text_field :date %>
  <br />
  <br />
  <%= f.label :time %>
  <%= f.text_field :time %>
  <br />
  <br />
  <%= f.submit "Update Appointment"%>
<% end %>
